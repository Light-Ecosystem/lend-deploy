{
  "name": "lend-deploy",
  "version": "1.0.0",
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "contracts/testnet-helpers",
    "artifacts"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "types": "dist/types/helpers/index.d.ts",
  "author": "HopeLend",
  "main": "dist/helpers/index.js",
  "devDependencies": {
    "lend-core": "file:../lend-core",
    "lend-periphery": "file:../lend-periphery",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@openzeppelin/contracts": "^4.3.2",
    "@types/bluebird": "^3.5.36",
    "@types/chai": "^4.2.21",
    "@types/mkdirp": "^1.0.2",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.7.1",
    "bluebird": "^3.7.2",
    "chai": "^4.3.4",
    "chalk": "^4.1.2",
    "dotenv": "^10.0.0",
    "ethers": "^5.4.7",
    "hardhat": "^2.6.8",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-dependency-compiler": "^1.1.2",
    "hardhat-deploy": "^0.10.6",
    "jsondiffpatch": "^0.4.1",
    "prettier": "^2.3.2",
    "ts-node": "^10.2.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^4.3.2"
  },
  "license": "LGPL-3.0",
  "scripts": {
    "run-env": "npm ci && tail -f /dev/null",
    "cp-typechain": "cp typechain/*.d.ts ./dist/types/typechain",
    "build": "tsc --project lib.tsconfig.json && npm run cp-typechain",
    "clean": "rm -rf artifacts/ types/ dist/ typechain/",
    "compile": "SKIP_LOAD=true npx hardhat compile",
    "prepublish": "npm run clean && npm run compile && npm run build",
    "node": "npx hardhat node --no-deploy",
    "node:fork": "FORK=main npm run node --no-deploy",
    "deploy": "if [ \"$SKIP_COMPILE\" = 'true' ]; then echo '[Warning] Skipping compilation'; else npm run compile; fi && npx hardhat deploy --no-compile",
    "test": "npm run compile && npm run test:local && npm run test:fork",
    "test:fork": "MARKET_NAME=HopeLend FORK=main npx hardhat test ./tests/__setup.spec.ts ./tests/fork/check-list.spec.ts",
    "test:local": "MARKET_NAME=HopeLend npx hardhat test ./tests/__setup.spec.ts ./tests/*.spec.ts",
    "deploy:market:hope:fork": "FORK=main MARKET_NAME=HopeLend npm run deploy"
  },
  "peerDependencies": {
    "lend-core": "file:../lend-core",
    "lend-periphery": "file:../lend-periphery",
    "hardhat": "^2.6.1"
  },
  "publishConfig": {
    "registry": " https://registry.npmjs.org"
  },
  "dependencies": {
    "defender-relay-client": "^1.11.1"
  }
}
